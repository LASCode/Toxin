{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "airbnb-base",
    "plugin:fsd/all"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "ignorePatterns": ["dist/*", "trash/*", "node_modules/*", "creators/*"],
  "rules": {
    "no-new": 0,
//    "linebreak-style": 0,
    "import/prefer-default-export": 0,
    "prefer-destructuring": ["error", {"object": true, "array": false}],
    "import/no-extraneous-dependencies": 0,
    "no-unsafe-optional-chaining": 0
  }
}
