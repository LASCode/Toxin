mixin radio-button(props={})
  -
    const {items=[], checked=0, name="changeMe"} = props

  .radio-button
    for item, index in items
      label.radio-button__label
        input.radio-button__input(type="radio" name=name, checked=checked===index)
        span.radio-button__fake-input
        if (item.title)
          span.radio-button__title= item.title