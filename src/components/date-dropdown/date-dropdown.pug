include ../base-dropdown/base-dropdown
mixin date-dropdown(props={})
  -
    const {
      isOpen = false,
      windowListener = true,
      inputListener = true,
      initialDates = false,
      isRange = true,
      format = false,
    } = props
  -
    const dropdownClass = {
      'js-dateDropdown' : true,
      'js-dateDropdown-withRange': isRange,
      'js-dateDropdown-withoutRange': !isRange,
    };

  div(data-range=isRange, data-format=format, data-dates=initialDates).date-dropdown.js-dateDropdown
    +baseDropdown({ isOpen, windowListener, inputListener })
      block

